{% schema %}
{
  "name": "Custom Text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Custom Text Section"
    },
    {
      "type": "text",
      "id": "buttonText",
      "label": "Button 1 Text",
      "default": "HELLO"
    },
    {
      "type": "page",
      "id": "buttonLink",
      "label": "Button 1 Link"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Add your custom text here. This text can be edited in the theme customizer.</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ],
      "default": "text-center"
    }
  ],
  "presets": [
    {
      "name": "Custom Text",
      "category": "Text"
    }
  ]
}
{% endschema %}

<div class="page-width section-{{ section.id }}-padding">
  <div class="custom-text-section {{ section.settings.text_alignment }}">
    {% if section.settings.heading != blank %}
      <h2 class="custom-text-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.text != blank %}
      <div class="custom-text-content">{{ section.settings.text }}</div>
    {% endif %}

    {% if section.settings.buttonText != blank %}
      <a href="{{ section.settings.buttonLink }}" class="custom-text-button">{{ section.settings.buttonText }}</a>
    {% endif %}
  </div>
</div>

{% style %}
.section-{{ section.id }}-padding {
  padding-top: calc({{ settings.spacing_sections_desktop }}px * 0.75);
  padding-bottom: calc({{ settings.spacing_sections_desktop }}px * 0.75);
}

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ settings.spacing_sections_desktop }}px;
    padding-bottom: {{ settings.spacing_sections_desktop }}px;
  }
}

.custom-text-section {
  max-width: 780px;
  margin: 0 auto;
}

.custom-text-heading {
  margin-bottom: 2rem;
  font-size: 2.4rem;
  line-height: 1.3;
}

.custom-text-content {
  font-size: 1.6rem;
  line-height: 1.6;
}

@media screen and (min-width: 750px) {
  .custom-text-heading {
    font-size: 3rem;
  }
}
{% endstyle %} 